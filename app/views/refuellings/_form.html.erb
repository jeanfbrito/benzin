<%= simple_form_for(@refuelling, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @refuelling.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@refuelling.errors.count, "error") %> prohibited this refuelling from being saved:</h4>

      <ul>
      <% @refuelling.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :date, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :mileage, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :mileage, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :liter_price, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :liter_price, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :liters, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :liters, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :gas_station, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :gas_station, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :average_consumption, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :average_consumption, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :traveled_mileage, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :traveled_mileage, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :total_value, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :total_value, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :vehicle, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.association :vehicle, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
